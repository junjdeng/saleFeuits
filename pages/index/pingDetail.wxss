/* pages/index/proDetail.wxss */
page{background: #f5f5f5;}
.header{width: 750rpx; background: #fff;}
.slider_ad{ width: 100%; height: 350rpx; background: #ffffff;}
.slider_ad swiper{height: 100%;}
.swiper-item{height: 100%; width: 100%; }
.swiper-item image{width: 100%; height: 100%;}

.header .content{padding: 20rpx;}
.header .content .title{font-size: 28rpx; color: #333333;line-height: 2;}
.header .content .sub_title{font-size: 22rpx; color: #888888;line-height: 2;}
.header .content .sku{font-size: 20rpx; color: #888888;line-height: 2;}
.header .content .sku span{font-size: 18rpx; color: #ff9900; padding-left: 20rpx;}
.header .content .price{font-size: 30rpx; line-height: 2; color: #ed3f14;}
.header .content .market_price{font-size: 22rpx;line-height: 2; color: #888888;text-decoration:line-through; margin-left: 20rpx;}

.header_wrapper{background: #ff990073; color: #666;height: 80rpx;position: relative;}
.header_wrapper .price{color:#fff; padding-left: 20rpx; background: linear-gradient(90deg, #ff9900,rgb(185, 143, 4));font-size: 36rpx;
line-height: 80rpx; border-top-right-radius: 40rpx; border-bottom-right-radius: 40rpx;}
.header_wrapper .time{text-align: center;}
.header_wrapper .price .market_price{font-size: 22rpx;line-height: 2; text-decoration:line-through; margin-left: 10rpx;}
.header_wrapper .price text{font-size: 22rpx;line-height: 2; border: 1px solid #fff; position: relative; top: -10rpx; padding: 5rpx 21rpx; border-radius: 21rpx; }

.header .promise{border-top: 1px solid #f5f5f5; padding: 20rpx 0 0 0; font-size: 24rpx;}
.taketime{margin-top: 20rpx; background: #fff; width: 710rpx; padding: 10rpx 20rpx; font-size: 24rpx; line-height: 2; color: #ff9900;}
.taketime span{color: #333;}

.list{margin: 20rpx; background: #fff; padding: 10rpx 20rpx 0 20rpx; width: 710rpx;}
.list_header{font-size: 26rpx;line-height: 50rpx; color: #333;border-bottom: 1px solid #d5d5d5;}
.list_header span{float: right; font-size: 24rpx; color: #888888;}
.list .item{font-size: 24rpx; color: #333; border-bottom: 1px solid #d5d5d5; padding: 10rpx 0;}
.list .item image{width: 100rpx; height: 100rpx; border-radius: 50rpx;}
.list .item .action{text-align: right;}
.list .item span{background: #ff9900; color: #fff; font-size: 24rpx;padding: 10rpx 20rpx; border-radius: 37rpx;}

.detail{ background: #fff; width: 710rpx; padding: 20rpx;margin-bottom: 100rpx;}
.detail .title{text-align: left; color: #333; font-size: 28rpx; line-height: 1.5; border-bottom: 1px solid #d5d5d5; padding-bottom: 10rpx;}
.detail text{ line-height: 40rpx;}
.detail .table .cell{border-bottom: 1px dashed #d5d5d5; line-height: 2; color: #333; font-size: 24rpx;}
.detail .table .cell span{width: 160rpx; display: inline-block; color: #888;}

.bottom_btns{width: 100%; height: 80rpx; position: fixed; bottom: 0; background: #fff; text-align: center; border-top: 1px solid #f5f5f5; font-size: 20rpx;}
.bottom_btns .shopcar{background: #ff9900; color: #fff; font-size: 28rpx; line-height: 80rpx;}
.bottom_btns .shopcar span{font-size: 20rpx;}
.bottom_btns .shopcar span text{text-decoration:line-through;}