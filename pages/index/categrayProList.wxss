/**index.wxss**/
page{background: #fff; height: 100%;}
.home_header {background: #19be6b;height: 100rpx;width: 100%;color: #ffffff; position: fixed; z-index: 99;}
.from_store{ display:inline-block; line-height: 36rpx; padding: 0 15rpx; font-size: 22rpx; background: #56c08b; border-radius: 18rpx; margin-top: 10rpx;}
.from_store span{padding: 0 10rpx;font-size: 24rpx; }

.con{margin-top: 100rpx; height: 100%;}
.slider{align-self: flex-start; background: #f5f5f5; height: 100%;}
.slider .s_item{line-height: 3; font-size: 26rpx; color: #333; padding: 0 20rpx; background: #f5f5f5;text-align: center;}
.slider .s_item.active{color: #19be6b; background: #fff;}

.list{background: #fff; align-self: flex-start;padding: 0 10rpx;}
.list .item{font-size: 24rpx; color: #333; border-bottom: 1px solid #d5d5d5; padding: 10rpx 0;}
.list .item image{width: 200rpx; height: 200rpx; border-radius: 10rpx;}
.list .item .action{text-align: right;}
.list .item span{color: #fff; font-size: 24rpx;}

.list .item .content{padding: 10rpx;}
.list .item .content .title{font-size: 28rpx; height: 40rpx; line-height: 40rpx; overflow: hidden;text-overflow: ellipsis;color: #333333;}
.list .item .content .sub_title{font-size: 22rpx; color: #ed3f14;}
.list .item .content .sku{font-size: 22rpx; color: #888888; line-height: 2;}
.list .item .content .price{font-size: 30rpx; line-height: 2; color: #ed3f14;}
.list .item .content .market_price{font-size: 22rpx;line-height: 2; color: #888888;text-decoration:line-through}
.list .item .content .tips{font-size: 20rpx; color: #19be6b;}
.list .item .content .tips span{border-radius: 4rpx; background: #fff; color: #19be6b; border: 1px solid #19be6b;padding: 0rpx 5rpx;font-size: 16rpx;}
.list .item .content .shopcar_wrap{text-align: right; }
.list .item .content .shopcar_wrap span{background: #19be6b;width: 50rpx; height: 50rpx; border-radius: 25rpx; margin-right: 20rpx; display: inline-block; text-align: center; vertical-align: middle;}