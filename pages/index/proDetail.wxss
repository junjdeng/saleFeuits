/* pages/index/proDetail.wxss */
page{background: #f5f5f5;}
.header{width: 750rpx; background: #fff;}
.slider_ad{ width: 100%; height: 350rpx; background: #ffffff;}
.slider_ad swiper{height: 100%;}
.swiper-item{height: 100%; width: 100%; }
.swiper-item image{width: 100%; height: 100%;}

.header .content{padding: 20rpx;}
.header .content .title{font-size: 28rpx; color: #333333;line-height: 2;}
.header .content .sub_title{font-size: 22rpx; color: #888888;line-height: 2;}
.header .content .sku{font-size: 20rpx; color: #888888;line-height: 2;}
.header .content .price{font-size: 30rpx; line-height: 2; color: #ed3f14;}
.header .content .market_price{font-size: 22rpx;line-height: 2; color: #888888;text-decoration:line-through; margin-left: 20rpx;}

.header .promise{border-top: 1px solid #f5f5f5; padding: 20rpx 0 0 0; font-size: 24rpx;}
.actives{margin-top: 20rpx; background: #fff; width: 710rpx; padding: 10rpx 20rpx; font-size: 24rpx; line-height: 2; color: #333;}
.actives .title{padding-right: 20rpx; font-size: 26rpx;}
.actives .content span{border-radius: 4rpx; border: 1px solid #19be6b; color: #19be6b; padding: 0rpx 10rpx; margin-right: 10rpx;}

.detail{margin-top: 20rpx; background: #fff; width: 710rpx; padding: 20rpx;margin-bottom: 100rpx;}
.detail .title{text-align: center; color: #333; font-size: 28rpx; line-height: 2;}
.detail text{background: #96f5c5; padding: 0 40rpx; border-radius: 20rpx; line-height: 40rpx;}
.detail .table .cell{border-bottom: 1px dashed #d5d5d5; line-height: 2; color: #333; font-size: 24rpx;}
.detail .table .cell span{width: 160rpx; display: inline-block; color: #888;}

.bottom_btns{width: 100%; height: 80rpx; position: fixed; bottom: 0; background: #fff; text-align: center; border-top: 1px solid #f5f5f5; font-size: 20rpx;}
.bottom_btns .shopcar{background: #19be6b; color: #fff; font-size: 28rpx; line-height: 80rpx;}