/**index.wxss**/
page{background: #f5f5f5;}
.home_header {background: #19be6b;height: 100rpx;width: 100%;color: #ffffff; position: fixed; z-index: 99;}
.from_store{ display:inline-block; line-height: 36rpx; padding: 0 15rpx; font-size: 22rpx; background: #56c08b; border-radius: 18rpx; margin-top: 10rpx;}
.from_store span{padding: 0 10rpx;font-size: 24rpx; }

.page_header{background: #19be6b; margin-top: 99rpx; height: 200rpx; width: 100%; padding: 20rpx; color: #ffffff;}
.page_header .item{padding: 0 20rpx; text-align: center; font-size: 26rpx; line-height: 40rpx;}
.page_header image{width: 160rpx;height: 100rpx;}

.slider_ad{ width: 100%; padding: 20rpx; background: #ffffff;}
.swiper-item{height: 100%; padding: 0 20rpx; width: 710rpx; }
.swiper-item image{width: 100%; height: 100%;border-radius: 10rpx;}

.list{margin: 20rpx;}
.list_header{font-size: 30rpx;line-height: 50rpx;}
.list_header span{float: right; font-size: 24rpx; color: #888888;}
.list_content .item{background: #ffffff; margin-bottom: 20rpx; border-radius: 10rpx; overflow: hidden; float: left; width: 345rpx;}
.list_content .item:nth-of-type(2n+1){margin-right:20rpx;}
.list_content .item image{width: 100%; height: 260rpx;}
.list_content .item .content{padding: 10rpx;}
.list_content .item .content .title{font-size: 28rpx; color: #333333;}
.list_content .item .content .sub_title{font-size: 22rpx; color: #888888;}
.list_content .item .content .sku{font-size: 20rpx; color: #888888;}
.list_content .item .content .price{font-size: 30rpx; line-height: 2; color: #ed3f14;}
.list_content .item .content .market_price{font-size: 22rpx;line-height: 2; color: #888888;text-decoration:line-through}
.list_content .item .content .tips{font-size: 18rpx; color: #19be6b;}
.list_content .item .content .tips span{border-radius: 4rpx; border: 1px solid #19be6b;padding: 0rpx 5rpx;}
.list_content .item .content .shopcar_wrap{text-align: right;}
.list_content .item .content .shopcar_wrap span{background: #19be6b; border-radius: 50%; height: 100rpx; width: 100rpx; padding: 10rpx;}

.sub_font{font-size: 22rpx;}