/* pages/find/find.wxss */
page{background: #f5f5f5;}
.home_header {background: #ffffff;height: 60rpx;width: 100%;color: #888888; position: fixed; z-index: 99; padding: 10rpx;align-items:center;}
.home_header input{background: #f5f5f5; border-radius: 8rpx; padding:10rpx; }

.list{margin: 20rpx; margin-top: 80rpx;}
.list_content .item{background: #ffffff; margin: 20rpx;border-radius: 20rpx; overflow: hidden; width:710rpx; position: relative;}
.list_content .item .num{text-align: left;position: absolute; top: 0;}
.list_content .item .num span{border-bottom-right-radius: 20rpx; border-top-left-radius: 20rpx;  padding:10rpx 25rpx; height: 30rpx; line-height: 30rpx; background: #ff9900; color: #ffffff;}
.list_content .item image{width: 100%; height: 300rpx;}
.list_content .item .content{padding: 10rpx;}
.list_content .item .content .title{font-size: 28rpx; color: #333333;}
.list_content .item .content .sku{font-size: 20rpx; color: #888888;}
.list_content .item .content .price{font-size: 30rpx; line-height: 2; color: #ed3f14;}
.list_content .item .content .market_price{font-size: 22rpx;line-height: 2; color: #888888;text-decoration:line-through}
.list_content .item .content .count{font-size: 22rpx; color: #888888; margin-left: 30rpx;}
.list_content .item .content .action{text-align: right;}
.list_content .item .content .action span{border-radius: 30rpx;  padding:10rpx 25rpx; height: 30rpx; line-height: 30rpx; background: #ff9900; color: #ffffff;}