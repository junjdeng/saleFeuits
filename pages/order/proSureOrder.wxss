/* pages/order/pingSureOrder.wxss */
page{background: #f5f5f5;}
.address{padding:20rpx; width: 710rpx; background: #fff;}
.address {border-bottom: 1px solid #d5d5d5; font-size: 28rpx; line-height: 2;}
.address .sub{color: #888888;}
.address .sub span{background: #ff9900; padding: 0 10rpx; margin-right: 5rpx;}
.address .action{text-align: right;}

.take_coupon{background: #fff; padding: 20rpx; width: 710rpx; margin-bottom: 20rpx; font-size: 28rpx;
 color: #888; line-height: 2;}

 .take_time{background: #fff; padding: 20rpx; width: 710rpx; border-bottom: 1px solid #f5f5f5;  color: #333; line-height: 1.6; }
.take_time span{ color: #19be6b; float: right; }

.take_other{background: #fff; padding: 20rpx; width: 710rpx; border-bottom: 1px solid #f5f5f5;  color: #333; line-height: 1.6; }
.take_other span{ color: #888; float: right; }
.take_other input{ color: #888; display: inline-block; line-height: 2; position: relative;top: 8rpx; }

.list{width: 100%; }
.list .item{background: #ffffff; padding: 20rpx; width: 710rpx; font-size: 24rpx; color: #333333;}
.list .item view{line-height: 2.5; }
.list .item .content{padding: 10rpx; align-items: flex-start;}
.list .item .content view{border: none;}
.list .item .content .img_wrap{width: 200rpx; height: 200rpx; margin-right: 10rpx;}
.list .item .content .img_wrap image{width: 100%; height: 100%;}
.list .item .content .title{font-size: 28rpx; line-height: 1.5;}
.list .item .content .sku{color: #888888;}
.list .item .content .price text{font-size: 26rpx; color: #888; float: right;}

.data_list{font-size: 28rpx; color: #333;line-height: 2.0;background: #fff; padding: 20rpx; width: 710rpx; margin-top: 20rpx;}
.data_list span{float: right;}

.pay_list{font-size: 28rpx; color: #333;line-height: 2.5;background: #fff; padding: 20rpx; width: 710rpx; margin-top: 20rpx; margin-bottom: 100rpx;}
.pay_list span{float: right;}

.bottom_btns{width: 100%; height: 80rpx; position: fixed; bottom: 0; background: #fff; text-align: center; border-top: 1px solid #f5f5f5; font-size: 20rpx;}
.bottom_btns span{color: #ff9900; font-size:28rpx;}
.bottom_btns .shopcar{background: #ff9900; color: #fff; font-size: 28rpx; line-height: 80rpx;}